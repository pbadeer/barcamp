{
  "name": "barcamp-omaha",
  "version": "1.0.0",
  "description": "Website for BarCamp Omaha.",
  "main": "index.js",
  "dependencies": {
    "browser-sync": "^2.18.13",
    "postcss-import": "^10.0.0",
    "postcss-cssnext": "^3.0.2",
    "postcss-cli": "^4.1.0",
    "watch": "^1.0.2",
    "ls": "^0.2.1",
    "ejs": "^2.5.6"
  },
  "scripts": {
    "start": "npm run build:watch",
    "server": "browser-sync start --server 'build' --files 'build'",
    "build": "npm run build:html && npm run build:assets",
    "build:assets": "npm run build:css && npm run build:js && npm run build:files",
    "build:files": "npm run build:images && npm run build:favicons",
    "build:images": "cp -r src/images build",
    "build:favicons": "cp src/favicons/*.* build",
    "build:html": "node bin/process_html.js",
    "build:css": "postcss src/css/barcamp.css -o build/barcamp.css -c postcss.config.js",
    "build:js": "cp -r src/js build",
    "build:watch": "watch \"npm run build\" ./src/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aiganebraska/barcamp.git"
  },
  "author": "AIGA Nebraska",
  "contributors": [
    {
      "name": "Sumeet Jain",
      "email": "sumeet@sumeetjain.com"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/aiganebraska/barcamp/issues"
  },
  "homepage": "https://github.com/aiganebraska/barcamp#readme"
}
